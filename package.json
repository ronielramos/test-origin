    "helmet": "^3.21.2",
    "jest": "^25.1.0",
    "log4js": "^6.1.1",
    "morgan": "^1.9.1",
    "pm2": "^4.2.3",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.9",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.1.2",
    "@types/log4js": "^2.3.5",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.7.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
